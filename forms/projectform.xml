<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset name="basic" label="COM_FISC_CALCULATOR_PROJECTFORM_FIELDSET_BASIC">
    <field name="id" type="hidden" />

    <field
      name="customer_id"
      type="sql"
      label="Kunde"
      required="true"
      query="SELECT id AS value, name AS text FROM #__fisc_customer_facility ORDER BY name ASC"
      key_field="value"
      value_field="text"
    />

    <field
      name="description"
      type="textarea"
      label="Projektbeschreibung"
      required="true"
    />

    <field
      name="assigned_user_id"
      type="user"
      label="Zugewiesener Benutzer"
      required="false"
    />
  </fieldset>
</form>
